# Deny direct access to includes and actions by default; allow specific files via router
Options -Indexes
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteBase /wol-manager/

# Block direct access to includes folder
RewriteRule ^includes/ - [F,L]

# Route pages via router.php while allowing assets/api/login/logout root files
RewriteCond %{REQUEST_URI} !^/wol-manager/(assets|api|login\.php|logout\.php|index\.php|router\.php|config\.php|csrf\.php)$
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^pages/(.*)$ router.php?view=$1 [QSA,L]
</IfModule>

# Security headers
Header always set X-Frame-Options "SAMEORIGIN"
Header always set X-Content-Type-Options "nosniff"
Header always set Referrer-Policy "no-referrer-when-downgrade"
Header always set X-XSS-Protection "1; mode=block"
